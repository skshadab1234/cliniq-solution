# Server Configuration
PORT=3002
NODE_ENV=production

# Database - Neon PostgreSQL (Production)
# Get your connection string from https://neon.tech
DATABASE_URL=postgresql://username:password@ep-xxx-xxx-xxx.region.aws.neon.tech/dbname?sslmode=require

# Database - Local Development (Optional - used when DATABASE_URL is not set)
DB_NAME=clinic-solution
DB_USER=postgres
DB_PASS=your_password
DB_HOST=localhost

# JWT Secret (Generate a strong random string)
JWT_SECRET=your_super_secret_jwt_key_here

# Frontend URL (for CORS)
FRONTEND_URL=https://your-frontend-url.vercel.app

# Email Configuration (Gmail SMTP)
GMAIL_NAME="Clinic Solution"
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_app_password

# Optional
STORE_NAME=ClinicSolution
